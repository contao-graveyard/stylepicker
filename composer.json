{
    "name": "contao-graveyard/stylepicker",
    "type": "contao-bundle",
    "description": "CSS Class selection wizard for contao",
    "keywords": ["css class"],
    "homepage": "https://github.com/contao-graveyard/stylepicker",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Sebastian Zoglowek",
            "homepage": "https://github.com/zoglo",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/contao-graveyard/stylepicker/issues",
        "source": "https://github.com/contao-graveyard/stylepicker",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^8.3",
        "contao/core-bundle": "^4.13 || ^5.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "shipmonk/composer-dependency-analyser": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "ContaoGraveyard\\ContaoStylePicker\\": "src/"
        },
        "classmap": [
            "contao/"
        ],
        "exclude-from-classmap": [
            "contao/config/",
            "contao/dca/",
            "contao/languages/",
            "contao/templates/"
        ]
    },
    "scripts": {
        "depcheck": "@php vendor/bin/composer-dependency-analyser --config=depcheck.php"
    },
    "extra": {
        "contao-manager-plugin": "ContaoGraveyard\\ContaoStylePicker\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "php-http/discovery": false
        }
    }
}
